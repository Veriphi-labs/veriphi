{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",            // ← only compile from src
    "outDir": "dist",            // ← emit flat dist/*
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,         // ← emit dist/*.d.ts for typings
    "declarationMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],    // ← tests aren’t emitted into dist
  "exclude": ["dist", "node_modules", "tests"]
}